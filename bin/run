#!/bin/bash

if [[ $OSTYPE == "linux-gnu" ]]; then
    EA_PATH=${XDG_DATA_HOME:-$HOME/.local/share}/emacs_anywhere
else
    EA_PATH=$HOME/.emacs_anywhere
fi

err () { echo -e "Error: $@" 1>&2; }

case $OSTYPE in
    "darwin"*)
        $EA_PATH/bin/osx
        ;;
    "linux-gnu")
        $EA_PATH/bin/linux
        ;;
    *)
        err OS $OSTYPE isn\'t currently supported
        exit 1
        ;;
esac
